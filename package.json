{
  "name": "news-feed",
  "version": "1.0.0",
  "description": "API to feed a website's home with news about its platform.",
  "main": "app.js",
  "scripts": {
    "start": "npm run prod",
    "build": "npm-run-all clean transpile",
    "server": "node ./dist-src/bin/www",
    "dev": "NODE_ENV=development npm-run-all build server",
    "prod": "NODE_ENV=production npm-run-all build server",
    "transpile": "babel ./src --out-dir dist-src",
    "clean": "rimraf dist-src",
    "test": "jest --testEnvironment=node --verbose --forceExit --watchAll --maxWorkers=1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dayanro/news-feed.git"
  },
  "author": "Dayan Rojas",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Dayanro/news-feed/issues"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "homepage": "https://github.com/Dayanro/news-feed#readme",
  "dependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "bcryptjs": "^2.4.3",
    "core-js": "^3.6.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "find-config": "^1.0.0",
    "jest-express": "^1.12.0",
    "mongoose": "^5.10.11",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "pino": "^6.7.0",
    "pino-pretty": "^4.3.0",
    "regenerator-runtime": "^0.13.7",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "jest": "^26.6.2",
    "node-mocks-http": "^1.9.0"
  }
}
